<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.Hyperlink?>
<AnchorPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.wieik.amberbronze.controller.LoginController">
    <HBox
            maxWidth="Infinity"
            alignment="CENTER"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0"
            AnchorPane.bottomAnchor="0.0">
        <VBox spacing="10" alignment="CENTER" maxWidth="200">

            <Label text="Login"/>
            <TextField fx:id="name" promptText="Name"/>
            <PasswordField fx:id="password" promptText="Password"/>
            <VBox spacing="6" alignment="CENTER">
                <Button text="Login" onAction="#handleLoginButtonAction"/>
                <Hyperlink text="Register" onAction="#handleRegisterButtonAction"/>
            </VBox>
        </VBox>
    </HBox>
</AnchorPane>

